@model BlogArticleViewModel

@{
    ViewData["Title"] = "Add comment";
}

<form asp-action="AddCommentToArticle">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Comments" class="control-label"></label>
        @foreach(var comment in Model.Comments)
        {
            <br/>
            @Html.DisplayFor(model => comment.Comment) 
        }
        <input asp-for="AddingComment" class="form-control" />
        <span asp-validation-for="AddingComment" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group">
        <a asp-action="Index">Back to List</a>
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>