@model NorthwindMvcClient.ViewModels.BlogArticleViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" class="form-control" asp-items="@ViewBag.employees"></select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products" class="control-label"></label>
                <div class="form-control">
                    @foreach(var product in Model.Products)
                    {
                        <div>@Html.DisplayFor(model => product.Name) <a href=@string.Concat("/BlogArticles/DeleteProductToArticle/", Model.Id, "/", product.Id)>Delete</a></div>
                    }
                    <a class="btn btn-warning btn-sm col-sm-2" href=@string.Concat("/BlogArticles/AddProductToArticle/", Model.Id.ToString())>Add</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <div class="form-control">
                    @foreach(var comment in Model.Comments)
                    {
                        <div>@Html.DisplayFor(model => comment.Comment) <a href=@string.Concat("/BlogArticles/DeleteCommentToArticle/", Model.Id, "/", comment.Id)>Delete</a></div>
                    }
                    <a class="btn btn-warning btn-sm col-sm-2" href=@string.Concat("/BlogArticles/AddCommentToArticle/", Model.Id.ToString())>Add</a>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
